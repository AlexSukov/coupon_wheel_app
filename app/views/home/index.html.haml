- content_for :javascript do
  :javascript
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
          buttons: {
          primary: {
            label: "Save", callback: function(){ $('#setting_save').click() }
          },
          secondary: [
            { label: "Help", callback: function(){ alert('help'); } },
            { label: "Preview", href: "http://my-app.com/preview_url", target: "new" }
          ],
        },
      });
    });
%input#shop_domain{type: 'hidden', value: @shop.shopify_domain}
= render 'settings_form', setting: @settings, slices: @slices

.section-block
  #collected_emails
    %h2 Collected Emails
    - @collected_emails.each do |collected_email|
      .collected-email
        %p= collected_email.email
        %button.remove-email{type: 'button', 'data-email-id': collected_email.id } Remove
.section-block
  #discount_codes
    %h2 Discount codes
    - @discounts.each do |discount|
      .discount
        %p= discount.title
        %p= discount.value_type
        %p= discount.value
